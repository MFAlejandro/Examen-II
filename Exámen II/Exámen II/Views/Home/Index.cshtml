@{
    ViewData["Title"] = "Home Page";
}
<form method="post" action="@Url.Action("GetTaskByParameter","Home")">
<label for="parameter" class="form-label">Search your task by Name or description</label>
<input type="text" class="form-control" id="parameter" name="parameter" required placeholder="Name or descriptions"> <button type="submit" class="btn btn-danger">Search</button>
</form>
<div class="container">
    <div class="row">
        @foreach (var item in ViewBag.TaskData)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Name: @item.Name</h5>
                        <p class="card-text">Description: @item.Description</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">DueDate: @item.DueDate</li>
                        <li class="list-group-item">Complet: @item.isComplete</li>
                        <li class="list-group-item">Priority: @item.Priority</li>
                    </ul>
                    <div class="card-body">
                        <form method="post" action="@Url.Action("CompleteTask","Functions")">
                            <input class="form-control" id="id" name="id" value="@item.ID" hidden>
                            <input class="form-control" id="docu" name="docu" value="@item.ducuID" hidden>
                            <button type="submit" class="btn btn-dark">Mark as complete</button>
                        </form>
                        <br>
                        <form method="post" action="@Url.Action("GetTask","Home")">
                            <input class="form-control" id="id" name="id" value="@item.ID" hidden>
                            <input class="form-control" id="docu" name="docu" value="@item.ducuID" hidden>
                            <button type="submit" class="btn btn-dark">Edit</button>
                        </form>
                        <br>
                        <form method="post" action="@Url.Action("DeleteTask","Functions")">
                            <input class="form-control" id="id" name="id" value="@item.ID" hidden>
                            <input class="form-control" id="docu" name="docu" value="@item.ducuID" hidden>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

    

</div>
